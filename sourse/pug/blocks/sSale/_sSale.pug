mixin sSale()
	// start sSale
	+b.sSale#sSale&attributes(attributes)
		.container
			.row.justify-content-center
				mixin item(i)
					.col-md-3.col-6
						+e.item.triangle-percent
							+e.imgWrap(href="#")
								img(src=`img/@2x/sale-${i}.jpg` alt="")
								+e.price 499 руб
							+e.heart
								img.active(src="img/@2x/hearBG.png", alt="")
								img.inActive(src="img/svg/heart.svg", alt="")
				+item('1')
				+item('2')
				+item('1')
				+item('2')
			+e.A.sell-out(href="#") Перейти к распродаже

	// end sSale